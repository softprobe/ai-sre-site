// Hero component - Simplified after relocating diagram
---

<section class="section">
    <header class="section-head">
        <h2 class="section-title">Why Customers Choose Softprobe</h2>
    </header>

    <div class="outcomes-grid">
        <article class="outcome-card">
            <div class="outcome-value">80%</div>
            <p class="outcome-label">Fewer bugs leaking to production</p>
        </article>

        <article class="outcome-card">
            <div class="outcome-value">90%</div>
            <p class="outcome-label">Faster debugging via AI SRE agent</p>
        </article>

        <article class="outcome-card">
            <div class="outcome-value">60%</div>
            <p class="outcome-label">Fewer support escalations</p>
        </article>
    </div>
</section>


<style>
    .section {
        width: 100%;
        padding: var(--site-page-padding-desktop);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 64px;
    }

    .section-head {
        text-align: center;
        margin: 0 auto;
        max-width: 880px;
    }

    .section-title {
        margin: 0;
        font-size: clamp(2rem, 4.5vw, 3.5rem);
        line-height: 1.1;
        font-weight: 900;
        color: #111827;
        letter-spacing: -0.02em;
    }

    .outcomes-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
        width: 100%;
        max-width: var(--site-max-width);
    }

    .outcome-card {
        text-align: center;
        padding: clamp(24px, 4vw, 42px);
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1), box-shadow 0.3s ease;
        box-shadow: 
            0 4px 6px -1px rgba(0, 0, 0, 0.05),
            0 10px 15px -3px rgba(0, 0, 0, 0.08);
    }

    .outcome-card:hover {
        transform: translateY(-8px);
        box-shadow: 
            0 20px 25px -5px rgba(0, 0, 0, 0.1),
            0 10px 10px -5px rgba(0, 0, 0, 0.04);
        border-color: var(--primary-color);
    }

    .outcome-value {
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 900;
        line-height: 1;
        background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.03em;
    }

    .outcome-label {
        margin: 0;
        font-size: clamp(1rem, 1.4vw, 1.25rem);
        font-weight: 700;
        line-height: 1.4;
        color: #374151;
        max-width: 240px;
    }

    @media (max-width: 1024px) {
        .outcomes-grid {
            gap: 20px;
        }
    }

    @media (max-width: 900px) {
        .outcomes-grid {
            grid-template-columns: 1fr;
            max-width: 480px;
        }
        
        .section {
            padding-inline: 20px;
        }
    }
</style>
