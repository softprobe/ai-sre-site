<style>
    .hero-layout-wrapper {
        display: grid;
        grid-template-columns: minmax(400px, 1.2fr) 1fr;
        gap: clamp(40px, 6vw, 80px);
        align-items: center;
        width: min(var(--site-page-max-width), 100%);
        margin: 80px auto;
        padding: 0 24px;
    }

    .hero-steps-column {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .hero-steps-column .section-head {
        text-align: left;
        margin: 0;
        padding: 0;
    }

    .hero-steps-column .section-title {
        font-size: clamp(2.2rem, 4.5vw, 3.2rem);
        line-height: 1.05;
        margin-bottom: 8px;
        color: #0f172a;
    }

    .step-cards-container {
        display: grid;
        gap: 20px;
    }

    .step-card {
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 20px;
        padding: 24px;
        box-shadow: 0 4px 6px -1px rgba(15, 23, 42, 0.05), 0 2px 4px -1px rgba(15, 23, 42, 0.02);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .step-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(15, 23, 42, 0.08);
        border-color: #7c3aed40;
    }

    .step-label {
        font-size: 0.75rem;
        font-weight: 900;
        color: #7c3aed;
        letter-spacing: 0.12em;
        margin-bottom: 8px;
        display: inline-block;
    }

    .step-title {
        font-size: 1.25rem;
        font-weight: 800;
        color: #0f172a;
        margin: 0 0 10px 0;
        line-height: 1.25;
    }

    .step-text {
        font-size: 0.95rem;
        color: #475569;
        line-height: 1.6;
        margin: 0;
    }

    /* Diagram Styling - Decisively Fixed */
    .hero-diagram-column {
        position: relative;
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 40px;
        border: 1px solid #e2e8f0;
        padding: 50px 20px;
        overflow: hidden; /* Back to hidden for clean contain */
