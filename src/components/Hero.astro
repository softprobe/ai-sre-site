        mask-size: contain;
    }

    .core-container {
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 30px 0;
    }

    .logo-center {
        position: relative;
        z-index: 10;
        background: white;
        padding: 12px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 15px 25px -5px rgba(0, 0, 0, 0.08);
