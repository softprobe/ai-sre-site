---
import BaseLayout from '../layouts/BaseLayout.astro';
import BookDemoButton from '../components/BookDemoButton.astro';

const seo = {
  title: "Safe Canary Test - Deterministic Replay with 0% Customer Risk | Softprobe",
  description:
    "Replace risky live canaries with deterministic replay. Softprobe captures real production flows, replays them in an isolated sandbox, validates behavior, and pauses releases on silent mismatches.",
  canonical: "https://softprobe.ai/canary",
  image: "https://softprobe.ai/logos/4.svg",
  type: "website"
};

const jsonld = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": `${seo.canonical}#webpage`,
      url: seo.canonical,
      name: seo.title,
      description: seo.description,
      isPartOf: { "@id": "https://softprobe.ai/#website" },
      primaryImageOfPage: { "@id": `${seo.canonical}#primaryimage` }
    },
    {
      "@type": "ImageObject",
      "@id": `${seo.canonical}#primaryimage`,
      url: seo.image
    },
    {
      "@type": "SoftwareApplication",
      name: "Softprobe",
      applicationCategory: "DeveloperApplication",
      operatingSystem: "Linux, macOS, Windows",
      description:
        "Softprobe captures end-to-end production context and enables deterministic replay for safe canary testing, debugging, and validation.",
      url: "https://softprobe.ai",
      featureList: [
        "Capture end-to-end message flows",
        "Replay production requests in isolated sandbox",
        "Inject upstream dependencies using captured data",
        "Validate responses and upstream requests",
        "Pause release on silent behavior mismatch"
      ]
    }
  ]
};
---

<BaseLayout
  {...seo}
>
  <Fragment slot="jsonld">
    <script type="application/ld+json" set:html={JSON.stringify(jsonld)}></script>
  </Fragment>

  <div class="debug-page canary-page">
    <section class="debug-hero">
      <div class="debug-copy">
        <p class="debug-kicker">Softprobe Canary</p>
        <h1>Roll out safely with Softprobe Canary</h1>
        <p>Run tests with replicated production traffic - 100% coverage of real user scenarios in an isolated environment that matches production 100%. Zero customer impact.</p>
        <div class="debug-hero-actions">
          <BookDemoButton />
        </div>  
      </div>

      <div class="debug-visual-wrap">
        <div class="canary-process-visual">
          <div class="canary-step-item">
            <div class="canary-step-card">
              <div class="canary-step-number">1</div>
              <div class="canary-step-content">
                <h3>Capture Real User Sessions</h3>
                <p>100% of sessions (no sampling)</p>
              </div>
            </div>
          </div>
          
          <div class="canary-step-connector">
            <div class="canary-step-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5v14M19 12l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <div class="canary-step-item">
            <div class="canary-step-card">
              <div class="canary-step-number">2</div>
              <div class="canary-step-content">
                <h3>Store the Full Context</h3>
                <p>Every request, response, and execution path is stored as a structured session graph</p>
              </div>
            </div>
          </div>

          <div class="canary-step-connector">
            <div class="canary-step-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5v14M19 12l-7 7-7-7" />
              </svg>
            </div>
          </div>

          <div class="canary-step-item">
            <div class="canary-step-card">
              <div class="canary-step-number">3</div>
              <div class="canary-step-content">
                <h3>Pre-release Testing</h3>
                <p>Replay past sessions in a test environment to ensure 100% coverage of real user scenarios</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <header class="section-head">
      <p class="section-kicker">Softprobe AI</p>
      <h2 class="section-title">100% production case coverage<br/>0% customer risk</h2>
      <p class="section-subtitle">Test with past production traffic before releasing to any live customers.</p>
    </header>

    <section class="debug-confidence">
      <div class="debug-confidence-media">
        <div class="debug-confidence-media-inner">
          <article class="canary-replay-card">
            <div class="canary-replay-icon-item"><span class="canary-icon-tile">↔</span><p>Mirroring live traffic</p></div>
            <div class="canary-replay-icon-item"><span class="canary-icon-tile"><img class="canary-brand-img canary-brand-img-sm" src="https://cdn.simpleicons.org/stripe/635BFF" alt="Stripe" width="16" height="16" /></span><p>Replay upstream</p></div>
            <div class="canary-replay-icon-item"><span class="canary-icon-tile"><img class="canary-brand-img canary-brand-img-sm" src="https://cdn.simpleicons.org/postgresql/4169E1" alt="PostgreSQL" width="16" height="16" /></span><p>Replay captured responses</p></div>
          </article>
        </div>
      </div>

      <div class="debug-confidence-copy debug-description-panel debug-description-panel--right">
        <p class="debug-panel-kicker">Release gating</p>
        <h2>Replay with 100% prod data</h2>
        <p>Validate release behavior against real production cases before rollout.</p>
      </div>
    </section>

    <section class="section debug-artifact-section" aria-label="Response validation">
      <div class="action-grid debug-artifact-grid">
        <div class="action-copy debug-artifact-copy-wrap">
          <div class="debug-artifact-sticky">
            <div class="debug-artifact-copy debug-description-panel debug-description-panel--left">
              <p class="debug-panel-kicker">Comparison engine</p>
              <h2>AI validates all responses</h2>
              <p>Softprobe compares production and replay JSON payloads field by field and blocks mismatches.</p>
            </div>
          </div>
        </div>

        <div class="action-visual debug-artifact-visual">
          <div class="action-visual-inner">
            <article class="slack-post canary-json-card">
              <p class="canary-json-title">Detected response difference: tax calculation</p>
              <div class="canary-json-col canary-json-col-diff">
                <p>response.diff</p>
                <pre class="canary-json-diff"><code><span class="diff-line diff-line-ctx">&#123;</span>
<span class="diff-line diff-line-ctx">  "subtotal": 120.00,</span>
<span class="diff-line diff-line-del">- "tax": 20.80,</span>
<span class="diff-line diff-line-del">- "total": 140.80,</span>
<span class="diff-line diff-line-add">+ "tax": 12.00,</span>
<span class="diff-line diff-line-add">+ "total": 132.00,</span>
<span class="diff-line diff-line-ctx">  "currency": "USD"</span>
<span class="diff-line diff-line-ctx">&#125;</span></code></pre>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>

    <section class="section debug-incident-section" aria-label="No customer impact controls">
      <div class="action-grid">
        <div class="action-visual debug-incident-visual">
          <div class="action-visual-inner">
            <article class="slack-post canary-safety-visual">
              <div class="canary-lane canary-lane-prod"><p>✓ Production traffic path</p><span>customers served</span></div>
              <div class="canary-lane canary-lane-replay"><p>◎ Replay isolation path</p><span>sandbox only</span></div>
              <div class="canary-lane canary-lane-gate"><p>⛔ Release gate</p><span>paused on mismatch</span></div>
            </article>
          </div>
        </div>

        <div class="action-copy debug-incident-copy debug-description-panel debug-description-panel--right">
          <p class="debug-panel-kicker">Safety first</p>
          <h2>No customer impact</h2>
          <p>Traffic stays in production path while replay runs in isolation and unsafe releases remain paused.</p>
        </div>
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .canary-process-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    padding: 20px 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .canary-step-item {
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .canary-step-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(226, 232, 240, 0.8);
    border-radius: 20px;
    padding: 24px;
    display: flex;
    align-items: flex-start;
    gap: 20px;
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .canary-step-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
    border-color: rgba(16, 185, 129, 0.3);
  }

  .canary-step-number {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #10b981 0%, #064e3b 100%);
    color: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.2rem;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .canary-step-content h3 {
    margin: 0 0 6px;
    font-size: 1.25rem;
    font-weight: 800;
    color: #0f172a;
    letter-spacing: -0.02em;
  }

  .canary-step-content p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.5;
    color: #475569;
    font-weight: 500;
  }

  .canary-step-connector {
    height: 60px;
    width: 2px;
    background: linear-gradient(to bottom, #10b981, #cbd5e1);
    position: relative;
    margin: -5px 0;
    z-index: 1;
  }

  .canary-step-arrow {
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    color: #94a3b8;
    width: 24px;
    height: 24px;
    background: white;
    border-radius: 999px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #e2e8f0;
  }

  .canary-step-arrow svg {
    width: 14px;
    height: 14px;
  }

  @media (max-width: 640px) {
    .canary-step-card {
      padding: 16px;
      gap: 14px;
    }
    .canary-step-content h3 {
      font-size: 1.1rem;
    }
    .canary-step-content p {
      font-size: 0.9rem;
    }
  }
</style>
