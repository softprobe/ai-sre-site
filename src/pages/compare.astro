---
import BaseLayout from '../layouts/BaseLayout.astro';
import { icons } from '../lib/icons';

const featureGroups = [
  {
    title: "AI SRE",
    features: [
      {
        feature: "Deterministic root cause analysis",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "AI-powered incident investigation",
        softprobe: true,
        others: true,
        highlight: false,
      },
      {
        feature: "Automated remediation suggestions",
        softprobe: true,
        others: true,
        highlight: false,
      },
      {
        feature: "Observability cost reduction (up to 90%)",
        softprobe: true,
        others: false,
        highlight: false,
      },
    ]
  },
  {
    title: "Event Logging",
    features: [
      {
        feature: "Captures 100% of user sessions (no sampling)",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "Captures end-to-end request/response message bodies",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "Reconstructs session-level runtime traces automatically",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "Automatic event instrumentation",
        softprobe: true,
        others: false,
        highlight: true,
      },
    ]
  },
  {
    title: "Pre-Release Testing",
    features: [
      {
        feature: "Replays real production traffic in test env",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "No need to create test data or API mocks",
        softprobe: true,
        others: false,
        highlight: true,
      },
      {
        feature: "Zero code changes required",
        softprobe: true,
        others: false,
        highlight: true,
      },
    ]
  }
];
---

<BaseLayout
  title="Compare AI SRE Platforms - Softprobe"
  description="Compare AI SRE platforms and see why Softprobe avoids garbage-in, garbage-out by capturing message bodies and reconstructing session traces, while staying preventive instead of reactive."
>
    <section id="compare" class="py-24 w-full">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-14">
          <span class="text-xs font-semibold tracking-widest uppercase text-emerald-600 mb-3 block">
            The Difference
          </span>
          <h2 class="text-3xl md:text-5xl font-bold text-slate-900 tracking-tight">
            Softprobe vs. other AI SREs
          </h2>
          <p class="mt-4 text-slate-500 text-lg max-w-xl mx-auto">
            Your AI is only as good as your data. Softprobe isn’t just an AI SRE. It’s an AI-native event logging platform that saves user sessions as structured data graphs that AI can read
          </p>
        </div>

        <div class="rounded-2xl border border-slate-100 overflow-hidden bg-white">
          {/* Header */}
          <div class="grid grid-cols-[1fr_120px_120px] md:grid-cols-[1fr_160px_160px] bg-slate-50 border-b border-slate-100">
            <div class="p-4 md:p-5 text-sm font-semibold text-slate-500">
              
            </div>
            <div class="p-4 md:p-5 text-center">
              <span class="text-sm font-bold text-slate-900">Softprobe</span>
            </div>
            <div class="p-4 md:p-5 text-center">
              <span class="text-sm font-semibold text-slate-400">Others</span>
            </div>
          </div>

          {/* Rows */}
          {featureGroups.map((group) => (
            <>
              <div class="bg-slate-50/80 px-4 py-3 border-b border-slate-100">
                <h3 class="text-xs font-bold uppercase tracking-wider text-slate-500">{group.title}</h3>
              </div>
              {group.features.map((row) => (
                <div
                  class={`grid grid-cols-[1fr_120px_120px] md:grid-cols-[1fr_160px_160px] border-b border-slate-50 last:border-0 ${
                    row.highlight ? "bg-emerald-50/30" : ""
                  } hover:bg-slate-50/50 transition-colors`}
                >
                  <div class="p-4 md:p-5 flex items-center gap-2">
                    <span class={`text-sm ${row.highlight ? "font-semibold text-slate-800" : "text-slate-600"}`}>
                      {row.feature}
                    </span>
                  </div>
                  <div class="p-4 md:p-5 flex justify-center items-center">
                    {row.softprobe === true && <div class="text-emerald-500"><Fragment set:html={icons.Check} /></div>}
                    {row.softprobe === "partial" && <div class="text-amber-400"><Fragment set:html={icons.Minus} /></div>}
                    {row.softprobe === false && <div class="text-slate-300"><Fragment set:html={icons.X} /></div>}
                  </div>
                  <div class="p-4 md:p-5 flex justify-center items-center">
                    {row.others === true && <div class="text-emerald-500"><Fragment set:html={icons.Check} /></div>}
                    {row.others === "partial" && <div class="text-amber-400"><Fragment set:html={icons.Minus} /></div>}
                    {row.others === false && <div class="text-slate-300"><Fragment set:html={icons.X} /></div>}
                  </div>
                </div>
              ))}
            </>
          ))}
        </div>
      </div>
    </section>
</BaseLayout>
