---
import BaseLayout from '../layouts/BaseLayout.astro';
import { icons } from '../lib/icons';

const logos = [
  { name: "Google", url: "https://upload.wikimedia.org/wikipedia/commons/2/2f/Google_2015_logo.svg" },
  { name: "Meta", url: "https://upload.wikimedia.org/wikipedia/commons/7/7b/Meta_Platforms_Inc._logo.svg" },
  { name: "Alibaba", url: "https://upload.wikimedia.org/wikipedia/en/8/80/Alibaba-Group-Logo.svg" },
  { name: "ByteDance", url: "https://upload.wikimedia.org/wikipedia/commons/0/07/ByteDance_logo_English.svg" },
  { name: "Trip.com", url: "https://upload.wikimedia.org/wikipedia/commons/7/7a/Trip.com_logo.svg" },
];

const expertise = [
  {
    title: "Artificial Intelligence",
    text: "Building intelligent systems that understand context and automate complex analysis."
  },
  {
    title: "Large-Scale Concurrency",
    text: "Engineering systems that handle millions of operations per second reliably."
  },
  {
    title: "Complex Data Architectures",
    text: "Designing efficient data structures that enable real-time insights at scale."
  }
];
---

<BaseLayout title="About Us - Softprobe">
  {/* Hero Section */}
  <section class="bg-gradient-to-b from-emerald-50/40 to-[#F8FAFC] pt-32 pb-16 md:pt-40 md:pb-20 w-full">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold text-slate-900 tracking-tight leading-tight">
          Built by Experts from the
          <span class="block bg-gradient-to-r from-emerald-500 to-cyan-500 bg-clip-text text-transparent">
             World's Leading Tech Giants.
          </span>
        </h1>
      </div>
    </div>
  </section>

  {/* Who We Are Section */}
  <section class="py-24 w-full bg-white">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">
        A Team of Veteran Technologists
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-16">
        Our team has built and managed massive-scale systems at the world's top technology companies.
      </p>
      
      <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
        {logos.map((logo) => (
          <div class="group bg-white border border-slate-100 rounded-xl p-6 hover:shadow-lg hover:border-slate-200 transition-all duration-300 flex flex-col items-center justify-center text-center h-32">
            <div class="h-16 flex items-center justify-center w-full">
              <img 
                src={logo.url} 
                alt={`${logo.name} logo`} 
                title={logo.name}
                class="max-h-full max-w-full object-contain"
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Our Expertise Section */}
  <section class="py-24 w-full bg-slate-50">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-16 text-center">
        Our Expertise
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {expertise.map((item) => (
          <div class="bg-white p-8 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
            <h3 class="text-xl font-bold text-slate-900 mb-4">{item.title}</h3>
            <p class="text-slate-600 leading-relaxed">
              {item.text}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="bg-slate-900 py-24 w-full">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Ready to Work With Us?
      </h2>
      <p class="text-slate-400 text-lg mb-8">
        Let's discuss how Softprobe can help your organization.
      </p>
      <div class="flex justify-center">
         <a
          href="/contact"
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-slate-900 rounded-full font-semibold hover:bg-slate-100 transition-all text-lg"
        >
          Contact Us
          <Fragment set:html={icons.ArrowRight} />
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
